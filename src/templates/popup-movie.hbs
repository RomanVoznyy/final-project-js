{{#if poster_path}}
<img class="popup-poster" src="https://image.tmdb.org/t/p/w500/{{poster_path}}" alt="{{title}}" data-id="{{id}}" />
{{else}}
<img class="popup-poster" src="https://dummyimage.com/294x441/f0f0f0/000.jpg&text=YOU%27RE+AWESOME+:)"
	 alt="placeholder" />
{{/if}}

<div class="popup-description">
	<h2 class="popup-title">{{title}}</h2>
	<table class="popup-info">
		<tr>
			<td class="info-title">Vote / Votes</td>
			<td><span class="vote-average">{{vote_average}}</span> /
				<span class="vote-count">{{vote_count}}</span>
			</td>
		</tr>
		<tr>
			<td class="info-title">Popularity</td>
			<td>{{popularity}}</td>
		</tr>
		<tr>
			<td class="info-title">Original Title</td>
			<td class="original-title">{{original_title}}</td>
		</tr>
		<tr>
			<td class="info-title">Genre</td>
			<td class="info-genre">{{#each genres}} {{name}}{{#unless @last}},{{/unless}} {{/each}}</td>
		</tr>
		<tr>
			<td class="info-title">Trailer</td>
			<td class="info-video">
				{{#if videoKey}}
				<iframe class="info-video-frame" width="200" src="https://www.youtube.com/embed/{{videoKey}}"
						frameborder="0"
						allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
						allowfullscreen>
				</iframe>
				{{else}}
				No video for this movie
				{{/if}}
			</td>
		</tr>
	</table>

	<p class="popup-overview-title">About</p>
	<p class="popup-overview">{{overview}}</p>

	<div class="popup-buttons">
		<button class="button js-watched" type="button" data-id='{{id}}' data-action='add'>add to watched</button>
		<button class="button js-queue" type="button" data-id='{{id}}' data-action='add'>add to queue</button>
	</div>
	</p>
</div>